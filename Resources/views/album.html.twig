{% block album_list %}
    <h3>Album List</h3>
    <p>
        {% if translate %}
            {% trans %} tool.album_table_desc {% endtrans %}
        {% else %}
            The table below shows the data fetched from the database using Symfony.<br/>
            <code>$album = $this->getDoctrine()->getRepository(Album::class)->findAll();</code>
        {% endif %}
    </p>
    <table class="table table-bordered table-striped">
        <thead>
        <tr>
            <th>Album name</th>
            <th>Album number</th>
            <th>Album Date</th>
        </tr>
        </thead>
        <tbody>
        {% for album in album_list %}
            <tr>
                <td>{{ album.getAlbName() }}</td>
                <td>{{ album.getAlbSongNum() }}</td>
                <td>{{ album.getAlbDate() }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}